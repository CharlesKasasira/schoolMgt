{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "utils/auth.js", "utils/supabase.js", "pages/_app.jsx", "components/Layout.jsx", "components/NavLink.jsx", "components/SideMenu.jsx", "utils/menuData.js", "pages/_document.jsx", "pages/teachers.jsx", "pages/index.jsx", "pages/login.jsx", "pages/attendance.jsx", "pages/bio.jsx", "pages/logs.jsx", "pages/payments.jsx", "pages/reports.jsx"],
  "exclude": ["node_modules"]
}
